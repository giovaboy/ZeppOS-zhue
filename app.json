{
  "configVersion": "v3",
  "app": {
    "appId": 10465464,
    "appName": "Hue On-Off",
    "appType": "app",
    "version": {
      "code": 1,
      "name": "1.0.0"
    },
    "icon": "icon.png",
    "vender": "giova",
    "description": "Control your Philips Hue lights from your smartwatch"
  },
  "permissions": ["data:os.device.info"],
  "runtime": {
    "apiVersion": {
      "compatible": "3.0.0",
      "target": "4.0.0",
      "minVersion": "3.0"
    }
  },
  "targets": {
    "default": {
      "module": {
        "page": {
          "pages": [
            "page/index",
            "page/groups",
            "page/group-detail",
            "page/light-detail",
            "page/color-picker"

          ]
        },
        "app-side": {
          "path": "app-side/index"
        },
        "setting": {
          "path": "setting/index"
        }
      },
      "platforms": [
        {
          "st": "r",
          "dw": 480
        },
        {
          "st": "s",
          "dw": 390
        },
        {
          "st": "b",
          "dw": 194
        }
      ]
    }
  },
  "defaultLanguage": "en-US"
}